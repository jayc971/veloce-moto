# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Veloce Moto

# CMS Configuration (Choose one and configure accordingly)
# ButterCMS
# NEXT_PUBLIC_BUTTER_CMS_API_KEY=your_buttercms_api_key_here

# Prismic
# PRISMIC_REPOSITORY_NAME=your_repository_name
# PRISMIC_ACCESS_TOKEN=your_access_token

# Sanity
# NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
# NEXT_PUBLIC_SANITY_DATASET=production
# SANITY_API_TOKEN=your_api_token

# E-commerce Integration (Choose one)
# Snipcart
# NEXT_PUBLIC_SNIPCART_API_KEY=your_snipcart_api_key

# Commerce.js
# NEXT_PUBLIC_CHEC_PUBLIC_KEY=your_commercejs_public_key

# Payment Processing (Stripe)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
# STRIPE_SECRET_KEY=your_stripe_secret_key

# PayPal
# NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_measurement_id

# Email Service (for order notifications, etc.)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@velocemoto.com
